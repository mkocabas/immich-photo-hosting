# Immich Environment Configuration
# Kiliclar Photo Project
#
# IMPORTANT: Copy this file to .env and fill in the values
# DO NOT commit the actual .env file to version control!

###################
# General Settings
###################

# Immich version - use 'release' for latest stable
IMMICH_VERSION=release

# Upload location - where photos are stored
# This should point to the rclone-mounted B2 bucket
UPLOAD_LOCATION=/mnt/photos

# Timezone
TZ=Europe/Istanbul

###################
# Database Settings
###################

DB_HOSTNAME=database
DB_USERNAME=postgres
DB_PASSWORD=CHANGE_ME_SECURE_PASSWORD_HERE
DB_DATABASE_NAME=immich

###################
# Redis Settings
###################

REDIS_HOSTNAME=redis

###################
# Machine Learning
###################

# Enable machine learning features (face detection, CLIP search)
IMMICH_MACHINE_LEARNING_ENABLED=true

# ML model settings
# CLIP model for natural language search
MACHINE_LEARNING_CLIP_MODEL=ViT-B-32__openai

# Face detection model
MACHINE_LEARNING_FACIAL_RECOGNITION_MODEL=buffalo_l

###################
# Security
###################

# JWT Secret - generate with: openssl rand -base64 32
JWT_SECRET=CHANGE_ME_GENERATE_RANDOM_SECRET

# Disable public signup after initial admin account
# IMMICH_DISABLE_USER_SIGNUP=true

###################
# OAuth (Optional)
###################

# Uncomment and configure for Google OAuth
# OAUTH_ENABLED=true
# OAUTH_ISSUER_URL=https://accounts.google.com
# OAUTH_CLIENT_ID=your-google-client-id
# OAUTH_CLIENT_SECRET=your-google-client-secret
# OAUTH_SCOPE=openid email profile
# OAUTH_AUTO_REGISTER=true

###################
# Performance
###################

# Number of worker threads for thumbnail generation
# IMMICH_WORKERS_INCLUDE=api,microservices

# Concurrent jobs
IMMICH_MICROSERVICES_CONCURRENCY=5
